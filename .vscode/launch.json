{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Web App: Dev Server",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm --filter @iidx/web-app dev",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Web App: Chrome",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/packages/web-app/src"
    }
  ],
  "compounds": [
    {
      "name": "Web App: Dev + Chrome",
      "configurations": [
        "Web App: Dev Server",
        "Web App: Chrome"
      ],
      "stopAll": true
    }
  ]
}
